.nested-fields
  = f.text_field :name, :class=>"lang_search", data: { autocomplete_source: autocomplete_items }
  %br
  = f.label :speaking_level, "Speaking Level"
  = f.collection_radio_buttons :speaking_level, [[1, 'Beginner'], [2, 'Intermediate'], [3, 'Expert']], :first, :last
  %br
  = f.label :reading_level, "Reading Level"
  = f.collection_radio_buttons :reading_level, [[1, 'Beginner'], [2, 'Intermediate'], [3, 'Expert']], :first, :last
  %br
  = f.label :writing_level, "Writing Level"
  = f.collection_radio_buttons :writing_level, [[1, 'Beginner'], [2, 'Intermediate'], [3, 'Expert']], :first, :last
  %br
  = link_to_remove_association "remove language", f