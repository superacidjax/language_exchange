%header.navbar.navbar-fixed-top
  .container
    = link_to 'Language Board', root_path, :class => 'brand'
    %nav
      %ul.nav.pull-right
        %li#fat-menu.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            Select Language
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to 'English', '#'
            %li
              = link_to 'German', '#'
        %li
          - if current_user
            = link_to "My Short List", following_user_path(current_user)
        %li
          - if current_user
            - if current_user.unread_messages?
              = link_to "New Messages!", user_messages_path(current_user)
            - else
              = link_to "My Messages", user_messages_path(current_user)
        %li
          - unless current_user
            = link_to "Sign up", new_user_path
        %li
          - unless current_user
            = link_to "Sign in", sign_in_path
            / %a.btn-link{"data-toggle" => "modal", :href => "#myModal", :role => "button"} Sign in
        - if current_user
          %li#fat-menu.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              My Account
              %b.caret
            %ul.dropdown-menu
              %li
                = current_user.first_name
              %li
                = link_to "My Profile", current_user
              %li
                = link_to 'Edit Profile', edit_user_path(current_user)
              %li.divider
              %li
                = link_to 'Logout', sign_out_path
        - else